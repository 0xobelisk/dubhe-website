{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["NEXT_CONFIG_ENV", "NODE_ENV", "RESEND_API_KEY", "RESEND_FROM_EMAIL", "RESEND_TO_EMAIL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "dependsOn": ["^test:unit"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["^test:e2e"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "test:performance": {
      "dependsOn": ["^test:performance"],
      "outputs": ["lighthouse-ci-results/**", "lighthouse-report.html"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
