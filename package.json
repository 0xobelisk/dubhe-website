{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:performance": "lhci autorun",
    "test:performance:local": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "test:all": "pnpm test:unit",
    "test:all:with-e2e": "pnpm test:unit && pnpm test:e2e:headless",
    "test:e2e:headless": "playwright test --project=chromium --reporter=line",
    "test:media-kit-i18n": "vitest run apps/web/__tests__/media-kit-*.test.*",
    "test:media-kit-e2e": "playwright test e2e/media-kit-i18n.spec.ts",
    "validate:media-kit-i18n": "node scripts/validate-media-kit-i18n.js"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.1",
    "playwright": "^1.54.2",
    "prettier": "^3.5.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "turbo": "^2.4.2",
    "typescript": "5.7.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "@babel/runtime-corejs3@<7.26.10": ">=7.26.10",
      "brace-expansion@>=1.0.0 <=1.1.11": "1.1.12",
      "brace-expansion@>=2.0.0 <=2.0.1": "2.0.2",
      "@eslint/plugin-kit@<0.3.4": ">=0.3.4",
      "tmp@<=0.2.3": ">=0.2.4"
    }
  }
}
